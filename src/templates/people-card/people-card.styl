.people-card
	display flex 
	flex-direction column
	justify-content center
	align-items center
	padding 15px 4px
	border-radius 6px
	max-width 96px
	cursor pointer

.people-card-item
	&__avatar
		width 64px
		height @width
		margin-bottom 15px
		border-radius 50%
		overflow hidden
		filter var(--filter-avatar)

	&__name
		font-family "Roboto"
		font-weight 500
		font-size 16px
		color var(--main-font-color)
		display block
		text-align center
		

	&__points
		font-size 14px
		color var(--secondary-font-color)

.people-card-info
	display flex
	flex-direction column
	align-items center