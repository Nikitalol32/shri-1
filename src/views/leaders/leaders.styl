.leaders
	display flex
	flex-direction column
	
	+verySmallScreen()
		font-size 14px

.people-positions
	display flex
	flex-direction row
	justify-content center
	margin-top 26px

.people-position__container
	display flex
	justify-content flex-end
	flex-direction column
	align-items center
	position relative

	+verySmallScreen()
		transform scale(.8)

.people-card-item__emoji
	position absolute
	top -15px
	z-index 3
	font-size 32px

.people-position__container_number_1
	z-index 10
	order 3

.people-position__container_number_1 .people-position
	height 90px
	background var(--active-gradient)
	box-shadow var(--box-shadow-leader-position)

	+smallScreen()
		height 325px

.people-position__container_number_2
	margin-left -20px
	order 3
	
	+verySmallScreen()
		margin-left -40px


.people-position__container_number_3
	margin-right -20px
	order 2
	
	+verySmallScreen()
		margin-right -40px

.people-position__container_number_2 .people-position,
.people-position__container_number_3 .people-position
	z-index 8
	height 70px

.people-position__container_number_2 .people-position
	+smallScreen()
		height 275px
	
.people-position__container_number_3 > .people-position
	+smallScreen()
		height 225px
	
.people-position__container_number_4
	margin-left -20px
	order 5

	
.people-position__container_number_5
	margin-right -20px
	order 1


.people-position__container_number_4 .people-position,
.people-position__container_number_5 .people-position
	z-index 6
	height 50px

.people-position
	color var(--main-font-color)
	font-size 30px
	font-weight 500
	width 102px
	display flex
	justify-content center
	background var(--inactive-gradient)
	box-shadow var(--box-shadow-other-position)
	border-radius 6px 6px 0 0
	padding 18px

.people-position__container_number_4
.people-position__container_number_5
	+smallScreen()
		display none
