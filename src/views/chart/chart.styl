.chart
	display flex
	flex-direction column
	align-items center

.chart-container
	display flex
	flex-direction column
	color var(--main-font-color)
	max-width 530px
	overflow hidden

	+smallScreen()
		max-width 100%

.statistic-container
	display flex
	flex-direction row
	height 177px
	margin-top 33px
	align-items flex-end
	justify-content flex-end

	+smallScreen()
		height 290px

.statistic
	display flex
	flex-direction column
	justify-content flex-end
	margin-right 24px
	max-width 40px
	width 100%

	&__points
		margin-bottom 8px
		color var(--secondary-font-color)

	&__column
		height 100%
		background var(--inactive-gradient)
		box-shadow var(--box-shadow-other-position)
		border-radius 6px
		min-height 7px

	&__year
		margin-top 12px
		color var(--secondary-font-color)

.statistic-leader .statistic

	&__points
		color var(--main-font-color)

	&__column
		background var(--active-gradient)
		box-shadow var(--box-shadow-leader-position)

.chart__people-card-container
	display flex
	flex-direction row
	justify-content center
	max-width 668px
	width 100%
	margin-top 30px

	+smallScreen()
		flex-direction column
		margin-top 20px
		padding 0 24px


.chart .people-card
	display flex
	flex-direction row
	max-width unset
	padding unset
	width 40%

	+smallScreen()
		width 95%
		padding 15px 0px
		justify-content flex-start

.chart .people-card:hover
	background unset

.chart .people-card-item__avatar
	width 40px
	height @width
	margin unset

.chart .people-card-item__name
	font-size 16px

.chart .people-card-item__name
	font-size 14px

.separator
	background-color var(--separator-color)
	width 2px
	opacity .3

	+smallScreen()
		width 85%
		height 2px

.chart .people-card-info
	align-items flex-start
	margin-left 20px
