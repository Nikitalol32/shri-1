@import 'const.styl'
@import 'mixins.styl'

@font-face {
	font-family 'Roboto'
	src url('assets/fonts/roboto-bold.woff2') format('woff2');
	font-weight 700
}

@font-face {
	font-family 'Roboto'
	src url('assets/fonts/roboto-medium.woff2') format('woff2');
	font-weight 500
}

@font-face {
	font-family 'Roboto'
	src url('assets/fonts/roboto-regular.woff2') format('woff2');
	font-weight 400
}

*
	margin 0
	padding 0

body,html
	width 100%
	height 100%

body
	font-family 'Roboto'
	background var(--bg-color)
	background-repeat no-repeat

body
	--bg-color radial-gradient(70.24% 70.24% at 49.87% 29.76%, rgba(19, 14, 0, 1) -10%, #000000 100%)

	--main-font-color #FCFBF7
	--secondary-font-color #918F8A
	
	--active-gradient radial-gradient(91.67% 122.17% at 69.17% -11.17%, #FFA300 0%, #2D1C00 100%)
	--inactive-gradient linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%), radial-gradient(149.08% 93.3% at 38.75% 72.1%, #000000 0%, #231900 0.01%, #4D4D4D 100%)

	--box-shadow-leader-position inset -1px 1px 1px rgba(255, 255, 255, 0.5), inset 0px 0px 20px rgba(255, 176, 57, 0.8)
	--box-shadow-other-position inset -1px 1px 1px rgba(255, 255, 255, 0.2), inset 2px 2px 16px rgba(103, 103, 103, 0.6)

	--inactive-box-shadow inset -1px 1px 1px rgba(255, 255, 255, 0.2), inset 2px 2px 16px rgba(255, 255, 255, 0.1)

	--color-extra-stats radial-gradient(91.67% 122.17% at 69.17% -11.17%, #FFA300 0%, #2D1C00 100%)
	--color-max-stats radial-gradient(5528.36% 3005.63% at 74.43% 75.84%, rgba(0, 0, 0, 0.9) 0%, rgba(33, 22, 2, 0.9) 0.01%, rgba(172, 113, 9, 0.9) 100%)
	--color-mid-stats radial-gradient(5752.25% 5190.32% at 74.43% 60.32%, rgba(0, 0, 0, 0.9) 0%, rgba(35, 22, 0, 0.9) 0.01%, rgba(112, 92, 94, 0.9) 100%)
	--color-min-stats radial-gradient(3906.1% 3815.36% at 89.06% 78.28%, rgba(19, 17, 16, 0.65) 0%, rgba(0, 0, 0, 0.65) 100%)

	--box-shadow-extra-stats inset -1px 1px 1px rgba(255, 255, 255, 0.2), inset 2px 2px 10px rgba(242, 159, 13, 0.9)
	--box-shadow-max-stats inset -1px 1px 1px rgba(255, 255, 255, 0.2), inset 2px 2px 10px rgba(242, 159, 13, 0.2)
	--box-shadow-mid-stats inset -1px 0px 1px rgba(255, 255, 255, 0.2), inset 2px 2px 10px rgba(93, 116, 141, 0.6)
	--box-shadow-min-stats inset -1px 0px 2px rgba(255, 255, 255, 0.2), inset 1px 1px 16px rgba(112, 102, 94, 0.2)

	--filter-avatar grayscale(0.9)

	--button-image url(assets/images/button-dark.svg)
	--button-image-hover url(assets/images/button-hover-dark.svg)

	--separator-color #918F8A

	--heat-map-item-min-size url('assets/images/min-dark.png')
	--heat-map-item-mid-size url('assets/images/mid-dark.png')
	--heat-map-item-max-size url('assets/images/max-dark.png')
	--heat-map-item-extra-size url('assets/images/extra-dark.png')

	--legends-segment-color radial-gradient(150% 252.96% at 150% 50%, rgba(64, 59, 54, 0.65) 0%, rgba(0, 0, 0, 0.65) 100%)
	--legends-segment-box-shadow inset 0px -1px 2px rgba(255, 255, 255, 0.25), inset 3px 1px 16px rgba(112, 102, 94, 0.3)

body.light-theme
	--bg-color #FFFFFF
	
	--main-font-color #261C00
	--secondary-font-color #BFBFBF
	
	--active-gradient linear-gradient(180deg, #FFF2D1 0.82%, #FFD66C 100%)
	--inactive-gradient linear-gradient(180deg, rgba(244, 244, 244, 0.9) 0.82%, #E9E9E9 100%, rgba(234, 234, 234, 0) 100%)

	--box-shadow-leader-position inset -1px 1px 1px rgba(255, 255, 255, 0.5), inset 0px 0px 20px rgba(255, 176, 57, 0.8)
	--box-shadow-other-position inset -1px 1px 1px rgba(255, 255, 255, 0.5), inset 0px 0px 20px rgba(207, 207, 207, 0.5)
	
	--color-extra-stats radial-gradient(66.02% 86.49% at -16.18% 13.51%, rgba(255, 186, 6, 0.85) 0%, #FFF2AD 100%)
	--color-max-stats radial-gradient(68.1% 68.1% at 4.41% 31.9%, #FFF6DD 8.72%, #FFFEFA 100%)
	--color-mid-stats radial-gradient(2408.25% 2730.55% at 89.06% 78.28%, rgba(250, 250, 250, 0.8) 0%, rgba(250, 250, 250, 0.8) 100%)
	--color-min-stats radial-gradient(2408.25% 2730.55% at 89.06% 78.28%, rgba(250, 250, 250, 0.6) 0%, rgba(250, 250, 250, 0.6) 100%)

	--box-shadow-extra-stats inset -1px 1px 1px rgba(255, 255, 255, 0.5), inset 0px 0px 20px rgba(255, 176, 57, 0.4)
	--box-shadow-max-stats inset -1px 1px 1px rgba(255, 255, 255, 0.5), inset 0px 0px 20px rgba(255, 176, 57, 0.4)
	--box-shadow-mid-stats inset -1px 0px 2px rgba(250, 250, 250, 0.2), inset 1px 1px 16px rgba(106, 106, 106, 0.3)
	--box-shadow-min-stats inset -1px 0px 2px rgba(250, 250, 250, 0.2), inset 1px 1px 16px rgba(106, 106, 106, 0.2)

	--filter-avatar unset

	--button-image url(assets/images/button-light.svg)
	--button-image-hover url(assets/images/button-hover-light.svg)

	--separator-color #BFBFBF

	--heat-map-item-min-size url('assets/images/min-light.svg')
	--heat-map-item-mid-size url('assets/images/mid-light.svg')
	--heat-map-item-max-size url('assets/images/max-light.svg')
	--heat-map-item-extra-size url('assets/images/extra-light.svg')

	--legends-segment-color radial-gradient(2408.25% 2730.55% at 89.06% 78.28%, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.8) 100%)
	--legends-segment-box-shadow inset -1px 0px 2px rgba(255, 255, 255, 0.2), inset 1px 1px 16px rgba(103, 103, 103, 0.2)

.g-header
	text-align center
	margin-top 10px

	+smallScreen()
		text-align left
		margin-left 15px

.g-title
	color var(--main-font-color)
	font-size 30px
	font-weight 700
	
	+verySmallScreen()
		font-size 28px

.g-subtitle
	color var(--secondary-font-color)
	font-size 16px
	font-weight 500
	margin-top 8px
